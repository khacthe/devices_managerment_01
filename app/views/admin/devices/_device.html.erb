<tr>
  <td>
    <b><%= device.id %></b>
  </td>
  <td>
    <b><%= device.name %></b>
  </td>
  <td>
    <%= link_to edit_admin_device_path(device.id) do %>
      <%= image_tag device.thumnail, class: "img-responsive device_image" %>
    <% end -%>
  </td>
  <td>
    <p class="borrow_<%= device.borrowed %>">
      <%= get_borrowed device.borrowed %>
    </p>
  </td>
  <% unless device.borrowed %>
    <td>
      <% if can? :update, @device %>
        <%= link_to edit_admin_device_path(device.id) do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end -%>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, @device %>
        <%= link_to admin_device_path(device.id), method: :delete,
          data: {confirm: t("device.confirm-delete", name: device.name)} do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end -%>
      <% end %>
    </td>
  <% end -%>
</tr>
